<Window x:Class="Reporting.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reporting.Client"
        mc:Ignorable="d"
        Title="Reporting Client" Height="450" Width="800"
        Unloaded="OnWindowUnloaded"
        KeyUp="OnKeyUp">
    <Grid x:Name="RootGrid" Margin="0,0,0,0">
        <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Panel.ZIndex="99999">
            <Grid x:Name="HelpGrid" HorizontalAlignment="Stretch" Background="DarkGray" Visibility="Hidden" Canvas.Left="0" Canvas.Bottom="0">
                <Label Foreground="White" Content="F1: Prev | F2: Next | F3: Toggle pause | F11: Toggle fullscreen" FontSize="25" HorizontalContentAlignment="Center"/>
            </Grid>
        </Canvas>
    </Grid>
</Window>
